<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/bg"
	tools:context=".MainActivity">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/ivSplash"
		android:layout_width="300dp"
		android:layout_height="300dp"
		android:src="@drawable/icget"
		android:layout_alignParentTop="true"
		android:layout_alignParentEnd="true"
		android:scaleType="centerCrop"/>

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tvSplash"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/ivSplash"
		android:text="@string/healty_on_you"
		android:textSize="24sp"
		android:textColor="@android:color/white"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="25dp"
		android:fontFamily="@font/mregular"/>

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tvSubSplash"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/tvSplash"
		android:textColor="#A3A2AD"
		android:text="@string/key_of_happiness_is_not_a_life_for_money"
		android:textSize="19sp"
		android:layout_centerHorizontal="true"
		android:textAlignment="center"
		android:layout_marginTop="16dp"
		android:fontFamily="@font/mlight"/>

	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/btnGet"
		android:layout_width="280dp"
		android:layout_height="55dp"
		android:layout_centerHorizontal="true"
		android:background="@drawable/bgbtngreen"
		android:layout_alignParentBottom="true"
		android:text="@string/get_started"
		android:textColor="@android:color/white"
		android:textSize="20sp"
		android:fontFamily="@font/mmedium"
		android:textAllCaps="false"
		android:layout_marginBottom="40dp"/>

</RelativeLayout>